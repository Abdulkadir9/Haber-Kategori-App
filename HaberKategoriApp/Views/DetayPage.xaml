<Page x:Class="HaberKategoriApp.Views.DetayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HaberKategoriApp.Views"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="600" d:DesignWidth="1100"
      Title="DetayPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Başlık: " FontSize="20" Margin="0,0,0,10"/>
                    <TextBlock Text="Açıklama: " FontSize="20" Margin="0,0,0,10"/>
                    <TextBlock Text="Kategori: " FontSize="20" Margin="0,0,0,10"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Margin="8,0,0,0">
                    <TextBlock x:Name="txtBaslik" Foreground="BlueViolet" Margin="0,0,0,10" FontSize="20"/>
                    <TextBlock x:Name="txtAciklama" Foreground="BlueViolet" Margin="0,0,0,10" FontSize="20"/>
                    <TextBlock x:Name="txtKategori" Foreground="BlueViolet" Margin="0,0,0,10" FontSize="20"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
